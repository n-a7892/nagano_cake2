<h4>注文履歴詳細</h4>
<div class="container">
<table>
  <tr>
    <td>購入者</td>
    <td><%= link_to @order.name, admin_customer_path(@customer.id) %></td>
  </tr>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>
      〒<%= @order.postal_code %> <%= @order.address %><br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method %></td>
  </tr>
  <% form_with model: @order, url: admin_order_path, method: :patch do |o| %>
  <tr>
    <td>注文ステータス</td>
    <td>
      <%= o.collection_select :status, @order, :status, :status %>
      <%= o.submit "更新", class: "btn btn-secondary" %>
    </td>
  </tr>
</table>
<div class="row">
  <div class="col-8">
    <table>
      <tr>
        <td>商品名</td>
        <td>単価（税込）</td>
        <td>数量</td>
        <td>小計</td>
        <td>製作ステータス</td>
        <td></td>
      </tr>
      <% @order.order_details.each do |ods| %>
      <th>
        <td><%= ods.item.name %></td>
        <td><%- (ods.item.price*1.1).to_s(:delimited) %></td>
        <td><%= ods.amount %></td>
        <td><%= ods.price.to_s(:delimited) %></td>
        <%= form_with mdoel: ods, url: admin_order_detail_path, method: :patch do |odsu| %>
        <td><%= odsu.collection_select :making_status, @order_details, :making_status, :making_status %></td>
        <td><%= odsu.submit "更新" %></td>
        <% end %>
      </th>
      <% end %>
    </table>
  </div>
  <div class="col-4">
    <table>
      <tr>
        <td>商品合計</td>
        <td>
          <% sum = @order_details.sum(:price) %>
          <%= sum.to_s(:delimited) %>円
        </td>
      </tr>
      <tr>
        <td>送料</td>
        <td>
          <% cost = @order.shipping_cost %>
          <%= cost.to_s(:delimited) %>円
        </td>
      </tr>
      <tr>
        <td>請求金額合計</td>
        <td><%= (sum+cost).to_s(:delimited) %>円</td>
      </tr>
    </table>
  </div>
</div>
</div>