<div class="container">
   <h4>商品詳細</h4><br><br>
    <div class="row">
      <div class="col-4">
        <div style="text-align: center;"><%= image_tag @item.get_image(150,150) %></div>
      </div>
      <div class="col-8">
        <table>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td><%= (((@item.price)*1.1).to_i).to_s(:delimited) %>（<%= (@item.price).to_s(:delimited) %>）円</td>
          </tr>
          <tr>
            <td>販売ステータス　</td>
            <td>
              <% if @item.is_active %>
              販売中
              <% else %>
              販売停止中
              <% end %>
            </td>
          </tr>
        </table><br>
      </div>
    </div>
    <div class="text-center"><%= link_to "　編集する　", edit_admin_item_path(@item), class: "btn btn-secondary text-center" %></div>
  </div>
</div>