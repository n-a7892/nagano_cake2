<h4>商品一覧</h4>
<table style="margin:0 auto;">
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
  </tr>
<% @items.each do |is| %>
  <tr height="50">
    <td width="100"><%= is.id %></td>
    <td width="300"><%= link_to is.name, admin_item_path(is.id) %></td>
    <td width="100"><%= is.price.to_s(:delimited)%></td>
    <td width="300"><%= is.genre.name %></td>
    <td width="150">
      <% if is.is_active %>
      販売中
      <% else %>
      販売停止中
      <% end %>
    </td>
  </tr>
<% end %>
</table>
<div style="text-align:center; margin:0 auto;"><%= paginate @items %></div>