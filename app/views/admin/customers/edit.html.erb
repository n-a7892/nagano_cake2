<div class="container"><br>
  <h5><%= @customer.fullname %>さんの会員情報編集</h5>

  <%= form_with model: @customer, url: admin_customer_path, method: :patch do |c| %>
  <table>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    <tr>
    <tr>
      <td>氏名</td>
      <td><%= c.text_field :last_name %>　　<%= c.text_field :first_name %></td>
    <tr>
    <tr>
      <td>フリガナ</td>
      <td><%= c.text_field :last_name_kana %>　　<%= c.text_field :first_name_kana %></td>
    <tr>
    <tr>
      <td>郵便番号</td>
      <td><%= c.number_field :postal_code %></td>
    <tr>
    <tr>
      <td>住所</td>
      <td><%= c.text_field :address %></td>
    <tr>
    <tr>
      <td>電話番号</td>
      <td><%= c.number_field :telephone_number %></td>
    <tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= c.email_field :email %></td>
    <tr>
    <tr>
      <td>会員ステータス　　　</td>
      <td><%= c.radio_button :is_active, true %>有効　<%= c.radio_button :is_active, false %>退会</td>
    <tr>
    <tr>
      <td> </td>
      <td> </td>
    <tr>
    <tr>
      <td></td>
      <td><%= c.submit "　変更を保存　"%></td>
    <tr>
  </table>
  <% end %>
</div>