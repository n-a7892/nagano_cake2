<div class="container"><br>
  <h5>ジャンル一覧・追加</h5>
  <br>
  <%= form_with model: @genre, url: admin_genres_path do |g| %>
  <table>
    <tr>
      <td>ジャンル名</td>
      <td><%= g.text_field :name %></td>
      <td><%= g.submit "新規登録", class: "btn btn-secondary" %></td>
    <tr>
  </table><br>
  <% end %>
  <br>
  <table class="table col-md-5">
    <thead>
      <tr class="table table-active">
        <th class="text-center" style="width:60%;">ジャンル</th>
        <th style="width:40%;"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |gs| %>
      <tr>
        <td><%= gs.name %></td>
        <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(gs.id), class: "btn btn-secondary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>