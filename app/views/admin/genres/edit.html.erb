<div class="container"><br>
  <h5>ジャンル編集</h5><br>
  <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |g| %>
  <table>
    <tbody>
      <tr>
        <td>ジャンル名</td>
        <td><%= g.text_field :name %></td>
        <td><%= g.submit "変更を保存", class: "btn btn-secondary" %></td>
      </tr>
    </tbody>
  </table>
  <% end %>
</div>