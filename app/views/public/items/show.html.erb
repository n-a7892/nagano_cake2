<div class="container">
  <div class="row">
    <div class="col-2 px-0">
      <table align="center">
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |gs| %>
        <tr>
          <td><%= gs.name %><td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-10">
      <div class="row">
      <div style="margin:10px;">
      <%= image_tag @item.get_image(400,300) %>
      </div>
      <div style="margin:10px;">
        <h5><strong><%= @item.name %></strong></h5><br>
        <%= @item.introduction %><br><br>
        <strong>¥<%= (@item.price*1.1).to_s(:delimited) %></strong>(税込)

      </div>
      </div>
    </div>
  </div>
</div>